<?xml-stylesheet href="chrome://global/skin/global.css"?>
<?xml-stylesheet href="chrome://browser/skin/devtools/common.css"?>
<?xml-stylesheet href="chrome://browser/skin/devtools/widgets.css"?>
<?xml-stylesheet href="chrome://browser/skin/devtools/profiler.css"?>
<?xml-stylesheet href="chrome://browser/content/devtools/widgets.css"?>
<?xml-stylesheet href="chrome://browser/content/devtools/magnifier.css" type="text/css"?>

<window xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <vbox id="magnifier-container" flex="1">
    <toolbar
    class="devtools-toolbar"
    style="border-bottom: 1px solid rgb(20,30,39) !important;"
    flex="1">
      <box id="color-preview">
      </box>
      <box id="color-text-preview">
      </box>
      <menulist class="devtools-menulist" sizetopopup="pref" label="RGB">
        <menupopup>
          <menuitem label="RGB" style="text-align: center"></menuitem>
          <menuitem label="HSL" style="text-align: center"></menuitem>
          <menuitem label="Hex" style="text-align: center"></menuitem>
        </menupopup>
      </menulist>

      <spacer flex="1" />

          <toolbarbutton
          class="developer-toolbar-button"
          type="checkbox"
          style="min-height: 24px ! important; max-height: 24px ! important; min-width: 24px ! important; max-width: 24px ! important; list-style-image: url('data:image/png;base64,'); -moz-image-region: rect(0px, 32px, 16px, 16px);"
          checked="true"
          ></toolbarbutton>
          <toolbarbutton
          type="checkbox"
          class="developer-toolbar-button"
          style="min-height: 24px ! important; max-height: 24px ! important; min-width: 24px ! important; max-width: 24px ! important; list-style-image: url('data:image/png;base64,'); -moz-image-region: rect(0px, 16px, 16px, 0px);">
            <menupopup>
              <menuitem
              label="Show Gridlines"
              type="checkbox"
              checked="false"
              ></menuitem>
              <menuitem
              label="Show smooth edges"
              type="checkbox"
              checked="null"
              ></menuitem>
            </menupopup>
            </toolbarbutton>
            <toolbarbutton
            class="devtools-closebutton"
            ></toolbarbutton>
            </toolbar>
            <hbox flex="1">
              <vbox  flex="1">
                <spacer flex="1" />
                <box>
                  <hbox flex="1">
                    <spacer flex="1" />
                    <box id="canvas-container">
                      <canvas id="canvas" xmlns="http://www.w3.org/1999/xhtml"></canvas>

                      <!--<box
                      style="position: absolute; top: 0px; left: 0px; height: 100%; width: 100%; background-size: 4px 4px; background-image: -moz-linear-gradient(left center , transparent 1px, transparent 1px), -moz-linear-gradient(center top , transparent 1px, transparent 1px);"
                      ></box>-->

                      <box id="grid" />
                    </box>
                    <spacer flex="1" />
                  </hbox>
                </box>
                  <!-- -->
                <spacer flex="1" />
              </vbox>
            </hbox>
            <box>
              <label for="zoom-level">Zoom</label><scale id="zoom-level" min="1" max="10" flex="1"/>
            </box>
            </vbox>

</window>